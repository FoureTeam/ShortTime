<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ImageView_ItemClass1">
        <item name="android:layout_width">24dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:src">@mipmap/ic_normal_class</item>

    </style>
    <style name="TextView_ItemClass1Title" >
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>
