<resources>

    <style name="Control" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Layout.Linear" parent="Control">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Layout.DrawerTop" parent="Control">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">145dp</item>
        <item name="android:background">@mipmap/ic_draw_background</item>
    </style>

    <style name="Layout.LinearTop" parent="Control">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView_ItemClass1">
        <item name="android:layout_width">24dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:src">@mipmap/ic_normal_class</item>

    </style>

    <style name="TextView_ItemClass1Title">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center|top</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Layout.Login" parent="Control">
        <item name="android:padding">8dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">16dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginBottom">16dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="EditText.Username" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">请输入用户名</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/lightslategray</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_username</item>

    </style>

    <style name="EditText.UserPhone" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">请输入手机号</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/lightslategray</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_username</item>

    </style>

    <style name="EditText.Password" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">请输入密码</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/lightslategray</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_password</item>
    </style>

    <style name="TextView.Login" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:text">登 录</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_marginLeft">16dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">16dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>

    <style name="TextView.LoginTips" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:textColor">@color/colortoolbar</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView.Draw_userName" parent="Control">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:text">椰汁奶茶</item>
    </style>
    <style name="TextView.Draw_signature" parent="Control">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:text">编辑个性签名</item>
    </style>

    <style name="Layout.HeightWarp" parent="Control">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.LinearHor" parent="Control">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Tool" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.Draw_Bottm" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageView.Toolbar" parent="Control">
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:background">@drawable/selector_color_main_add</item>
    </style>

    <style name="TextView.Toolbar" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">50dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/colortoolbar</item>
    </style>

    <style name="EditText.Email" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:hint">请输入性别</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColorHint">@color/lightslategray</item>
        <item name="android:drawableLeft">@mipmap/ic_edit_email</item>
    </style>

    <style name="TextView.UserTitle" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
</resources>
