<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:orientation="vertical">

        <include layout="@layout/include_jokes_message" />

        <TextView
            android:id="@+id/describe_img"
            style="@style/TextView.recomDescribe"
            android:text="天气美美的,适合郊游" />

        <com.gui.ninegrideview.LGNineGrideView
            android:id="@+id/nine_gride"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="60dp"
            app:singleImageRatioMode="@integer/SINGLE_IMAGE_MODE_RELATIVE_TO_SELF"
            app:space="10dp"></com.gui.ninegrideview.LGNineGrideView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/godCommentsUserOne_img"
            style="@style/TextView_godCommentsUser"
            android:text="骑猪上高速" />

        <TextView
            style="@style/TextView_colon"
            android:text=" : " />

        <TextView
            android:id="@+id/godCommentsDetailsOne_img"
            style="@style/TextView_colon"
            android:text="不错" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/godCommentsUserTwo_img"
            style="@style/TextView_godCommentsUser"
            android:text="骑猪上高速" />

        <TextView
            style="@style/TextView_colon"
            android:text=" : " />

        <TextView
            android:id="@+id/godCommentsDetailsTwo_img"
            style="@style/TextView_colon"
            android:text="不错" />
    </LinearLayout>
</LinearLayout>